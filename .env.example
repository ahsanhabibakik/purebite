# =============================================================================
# PUREBITE ECOMMERCE - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB connection string
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/purebite?retryWrites=true&w=majority&appName=PureBite"

# =============================================================================
# NEXTAUTH CONFIGURATION
# =============================================================================
# NextAuth secret key (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="your-super-secret-nextauth-key-here"

# Base URL for your application
NEXTAUTH_URL="http://localhost:3000"

# =============================================================================
# GOOGLE OAUTH PROVIDER
# =============================================================================
# Get these from: https://console.developers.google.com/
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# =============================================================================
# STRIPE PAYMENT CONFIGURATION
# =============================================================================
# Get these from: https://dashboard.stripe.com/
# Use test keys for development, live keys for production
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"

# Stripe webhook secret (for handling payment events)
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Set to true for development/testing
STRIPE_SANDBOX_MODE="true"

# =============================================================================
# GOOGLE ANALYTICS & TAG MANAGER
# =============================================================================
# Google Analytics 4 Measurement ID
# Format: G-XXXXXXXXXX (replace with your actual GA4 ID)
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-D7CKE6Z48J"

# Google Tag Manager Container ID
# Format: GTM-XXXXXXX (replace with your actual GTM ID)
NEXT_PUBLIC_GTM_ID="GTM-PT74S7P4"

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP settings for sending emails (order confirmations, notifications, etc.)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"

# Email addresses
SMTP_FROM="noreply@purebite.com"
ADMIN_EMAIL="admin@purebite.com"

# =============================================================================
# OPENAI CONFIGURATION (for AI features)
# =============================================================================
# OpenAI API key for product recommendations, search, etc.
OPENAI_API_KEY="sk-your-openai-api-key"

# =============================================================================
# PINECONE CONFIGURATION (for vector search)
# =============================================================================
# Pinecone vector database for product search and recommendations
PINECONE_API_KEY="your-pinecone-api-key"
PINECONE_ENVIRONMENT="your-pinecone-environment"
PINECONE_INDEX_NAME="purebite-products"

# =============================================================================
# CLOUDINARY CONFIGURATION (for image uploads)
# =============================================================================
# Get these from: https://cloudinary.com/
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# =============================================================================
# SECURITY & RATE LIMITING
# =============================================================================
# JWT secret for API authentication
JWT_SECRET="your-jwt-secret-key"

# Rate limiting (requests per minute)
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="60000"

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
ENABLE_REVIEWS="true"
ENABLE_WISHLIST="true"
ENABLE_COUPONS="true"
ENABLE_LIVE_CHAT="true"
ENABLE_BLOG="true"
ENABLE_ANALYTICS="true"

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================
# Social media links
NEXT_PUBLIC_FACEBOOK_URL="https://facebook.com/purebite"
NEXT_PUBLIC_TWITTER_URL="https://twitter.com/purebite"
NEXT_PUBLIC_INSTAGRAM_URL="https://instagram.com/purebite"

# Customer support
SUPPORT_EMAIL="support@purebite.com"
SUPPORT_PHONE="+1-555-123-4567"

# =============================================================================
# SHIPPING & LOGISTICS
# =============================================================================
# Shipping calculation
DEFAULT_SHIPPING_RATE="9.99"
FREE_SHIPPING_THRESHOLD="75.00"

# Tax calculation
DEFAULT_TAX_RATE="0.08"

# =============================================================================
# DEVELOPMENT/PRODUCTION SETTINGS
# =============================================================================
# Set to 'development' or 'production'
NODE_ENV="development"

# Enable debug logging
DEBUG="true"

# API URL (for external API calls)
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# =============================================================================
# BACKUP AND MONITORING
# =============================================================================
# Sentry for error tracking (optional)
SENTRY_DSN="your-sentry-dsn"

# Vercel Analytics (if deploying to Vercel)
VERCEL_ANALYTICS_ID="your-vercel-analytics-id"

# =============================================================================
# ADDITIONAL NOTES
# =============================================================================
# 1. Replace all placeholder values with your actual credentials
# 2. Keep your .env.local file secure and never commit it to version control
# 3. For production, use environment-specific values and secure secret management
# 4. Some services may require additional setup (webhooks, DNS, etc.)
# 5. Test all integrations in development before deploying to production