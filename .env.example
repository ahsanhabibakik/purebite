# =============================================================================
# PUREBITE ECOMMERCE - ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/purebite?retryWrites=true&w=majority&appName=PureBite"

# =============================================================================
# NEXTAUTH CONFIGURATION
# =============================================================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-nextauth-key-here"

# =============================================================================
# GOOGLE OAUTH PROVIDER
# =============================================================================
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# =============================================================================
# SITE CONFIGURATION
# =============================================================================
SITE_NAME="Your Site Name"
ADMIN_EMAIL="your-admin@email.com"
NODE_ENV="development"

# =============================================================================
# GOOGLE ANALYTICS & TAG MANAGER
# =============================================================================
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"
NEXT_PUBLIC_GTM_ID="GTM-XXXXXXX"

# =============================================================================
# PAYMENT URLs
# =============================================================================
NEXT_PUBLIC_SUCCESS_URL="http://localhost:3000/payment/success"
NEXT_PUBLIC_FAIL_URL="http://localhost:3000/payment/failed"
NEXT_PUBLIC_CANCEL_URL="http://localhost:3000/payment/cancelled"
NEXT_PUBLIC_IPN_URL="http://localhost:3000/api/payment/ipn"

# =============================================================================
# STRIPE PAYMENT CONFIGURATION
# =============================================================================
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"
STRIPE_SANDBOX_MODE="true"

# =============================================================================
# SSLCOMMERZ PAYMENT CONFIGURATION
# =============================================================================
SSLCOMMERZ_STORE_ID="your_store_id"
SSLCOMMERZ_STORE_PASSWORD="your_store_password"
SSLCOMMERZ_IS_SANDBOX="true"
SSLCOMMERZ_SANDBOX_URL="https://sandbox.sslcommerz.com"
SSLCOMMERZ_LIVE_URL="https://securepay.sslcommerz.com"

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="noreply@yoursite.com"
SUPPORT_EMAIL="support@yoursite.com"

# =============================================================================
# AI CONFIGURATION
# =============================================================================
OPENAI_API_KEY="sk-your-openai-api-key"
PINECONE_API_KEY="your-pinecone-api-key"
PINECONE_ENVIRONMENT="your-pinecone-environment"
PINECONE_INDEX_NAME="purebite-products"

# =============================================================================
# CLOUDINARY CONFIGURATION
# =============================================================================
# Get these from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"
CLOUDINARY_URL="cloudinary://your-api-key:your-api-secret@your-cloud-name"

# =============================================================================
# SECURITY & RATE LIMITING
# =============================================================================
JWT_SECRET="your-jwt-secret-key"
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="60000"

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_REVIEWS="true"
ENABLE_WISHLIST="true"
ENABLE_COUPONS="true"
ENABLE_LIVE_CHAT="true"
ENABLE_BLOG="true"
ENABLE_ANALYTICS="true"

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================
NEXT_PUBLIC_FACEBOOK_URL="https://facebook.com/yoursite"
NEXT_PUBLIC_TWITTER_URL="https://twitter.com/yoursite"
NEXT_PUBLIC_INSTAGRAM_URL="https://instagram.com/yoursite"
SUPPORT_PHONE="+1-555-123-4567"

# =============================================================================
# SHIPPING & LOGISTICS
# =============================================================================
DEFAULT_SHIPPING_RATE="9.99"
FREE_SHIPPING_THRESHOLD="75.00"
DEFAULT_TAX_RATE="0.08"

# =============================================================================
# API CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_URL="http://localhost:3000/api"
DEBUG="true"

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================
# Set to 'true' to skip Prisma generation during build (useful for Windows permission issues)
SKIP_PRISMA_GENERATE="false"
# Disable Next.js telemetry
NEXT_TELEMETRY_DISABLED="1"
# Increase Node.js memory limit for builds
NODE_OPTIONS="--max-old-space-size=4096"

# =============================================================================
# MONITORING & ERROR TRACKING
# =============================================================================
SENTRY_DSN="your-sentry-dsn"
VERCEL_ANALYTICS_ID="your-vercel-analytics-id"